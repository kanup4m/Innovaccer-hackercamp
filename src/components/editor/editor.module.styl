.fieldContainer
    margin-bottom 40px


.text
    border: none;
    overflow: auto;
    outline: none;
    box-shadow: none;

    box-shadow 0 4px 14px #f1f1f1
    border-radius 4px
    background-color #ffffff
    width 95%
    min-height 100px
    margin-top 16px
    padding: 17px 17px 17px 17px
    color #222222
    font-size 18px
    font-weight 700

.slider
    margin-top 20px

.colorContent
    display flex
    margin-top 15px

.color
    border-radius 4px
    border 1px solid #f1f1f1
    width 25px
    height 25px
    margin-right 10px
    cursor: pointer

.zIndex
    margin-top 20px
    display flex
    img
        cursor: pointer
        margin-right 20px