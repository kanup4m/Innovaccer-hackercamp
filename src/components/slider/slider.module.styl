.slider
    width 375px
    height 667px
    background rgba(123,206,31,0.8)
    position relative
    overflow hidden

.layer
    position absolute

.layerText
    composes layer
    display table
    margin 0
    width 100%
    cursor pointer
    padding: 0px 5px
    border: 2px dashed rgba(255, 255, 255, 0)
    box-sizing: border-box
    text-shadow: 0 2px 4px rgba(0,0,0,0.50);
    text-transform: none;

.selected
    box-sizing: border-box
    border: 2px dashed #ffffffb3;