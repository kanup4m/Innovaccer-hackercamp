
.urlContainer
	display flex
	flex-flow row nowrap
	justify-content space-between


.left
	display: flex
	flex-flow row wrap
	width: 65%
	justify-content: flex-start
	align-content: flex-start;

.underHeadline
	display: flex;
	flex-flow: row nowrap

h1 
	font-size 72px
	color: #22222
	text-align: left
	letter-spacing: -1px;
	line-height: 100px;

span 
	background-image: url(../../assets/gradient.png);
	-webkit-background-clip: text;
	background-clip: text;
	color: transparent;
	background-size: cover;

p
	width: 243px;
	color: rgba(34, 34, 34, 0.2);
	font-size: 14px;
	font-weight: 700;
	text-transform: uppercase;
	letter-spacing: 2px;

input
	width: 385px;
	height: 60px;
	box-shadow: 0 4px 14px #f1f1f1;
	border-radius: 4px;
	background-color: #ffffff;
	border 0
	padding: 0 0 0 15px;
	font-size: 18px;

input::placeholder 
	color: rgba(34, 34, 34, 0.4);

input:focus
	outline: none

.buttonFirst
	width: 217px;
	padding 15px 15px 18px 15px;
	box-shadow: 0 2px 10px rgba(123, 206, 31, 0.7), 0 2px 4px rgba(0, 0, 0, 0.07);
	border-radius: 4px;
	background-image: linear-gradient(to right, #94df42 0%, #7ed321 100%);
	color: white
	font-size: 18px;
	cursor pointer
	
	&:hover
		background-image linear-gradient(to right, darken(#94df42, 10%) 0%,darken(#7ed321, 10%) 100%)
    

.right 
	position: relative

.imgStories
	width: 357px;
	height: 715px;
	background-image: url(../../assets/white.png)

.imgBg
	width 684px
	height 680px
	background-image: url(../../assets/circles.svg)
	position: absolute
	top: 0
	left: -70px
	z-index: -1

.loader,
.loader:after {
  border-radius: 50%;
  width: 10em;
  height: 10em;
}
.loader {
	margin: -8px auto;
	margin-top: -6px;
	font-size: 3.4px;
	position: relative;
	text-indent: -9999em;
	border-top: 1.1em solid rgba(255, 255, 255, 0.2);
	border-right: 1.1em solid rgba(255, 255, 255, 0.2);
	border-bottom: 1.1em solid rgba(255, 255, 255, 0.2);
	border-left: 1.1em solid #ffffff;
	transform: translateZ(0);
	animation: load8 1.1s infinite linear;
}
@-webkit-keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
@keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
